<?xml version="1.0" encoding="utf-8"?>
<TableLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Block">

    <TableRow tools:ignore="ExtraText">
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sudokuUnit_1"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/sudokuUnit_2"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/sudokuUnit_3"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

             />

        </LinearLayout>

    </TableRow>

    <TableRow>
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sudokuUnit_4"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/sudokuUnit_5"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/sudokuUnit_6"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </TableRow>

    <TableRow>
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sudokuUnit_7"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/sudokuUnit_8"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/sudokuUnit_9"
                android:layout_width="@dimen/size_sudokuUnit"
                android:layout_height="@dimen/size_sudokuUnit"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </TableRow>

</TableLayout>